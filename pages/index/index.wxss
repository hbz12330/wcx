/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
width: 200rpx;
height: 200rpx;
margin: 1rpx;
border-radius: 50%;

}
.title text{
  font-size: 50rpx;
  color: rgba(255, 001, 102, 211);
}
.userinfo-nickname {
  color: #aaa;
}
.sp{
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between
}
.sp view{
  width:33%;
  text-align: center;
  margin-bottom: 5rpx;
  background:green;
}
.sp view view{
  width: 100%;
}

.usermotto {
  margin-top: 200px;
}
.section{
  width: 100%;
  margin-top:10px;
}
 
.scroll-view_H{
  height:210rpx;
  display: flex;
  width: 100%;
  white-space: nowrap;
 
}
.scroll-view-item_H{
  width:300rpx;
  height:210rpx;
  margin-right:5rpx;
  display: inline-block;
 
}
.scroll-image{
  width:300rpx;
  height:210rpx;
  display: block;
  border-radius: 10px
}
.foot{
  background: #2F4F4F;
  color: white;
}